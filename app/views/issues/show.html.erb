<p id="notice"><%= notice %></p>

<div class="d-flex flex-row justify-content-between">
  <div class="p-2">
    <h1><%= @issue.title %></h1>
    <%= resolve_issue_badge(@issue) %>
  </div>

  <div class="p-2">
    <%= link_to 'Edit', edit_issue_path(@issue), class: "btn btn-secondary" %> 
    <%= link_to 'New Issue', new_issue_path, class: 'btn btn-success' %>
  </div>
</div>

<div id="issue-body">
  <%= simple_format @issue.body %>
</div>

<%= resolve_issue_button(@issue) %>

<hr>

<%= render partial: 'comments/form' %>

<div class='comments'>
  <%= render @issue.comments %>
</div>
